@model TaskManagementApp.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Are you sure you want to delete this task?</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
        <p class="card-text">
            <strong>Due Date:</strong>
            @if (Model.DueDate != null)
            {
                @Model.DueDate.Value.ToString("yyyy-MM-dd")
            }
            else
            {
                <text>No Due Date</text>
            }
        </p>

        @if (Model.AssignedUser != null)
        {
            <p class="card-text"><strong>Assigned User:</strong> @Model.AssignedUser.FullName</p>
        }
        else
        {
            <p class="card-text"><strong>Assigned User:</strong> Not Assigned</p>
        }
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.TaskId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Cancel</a>
</form>
