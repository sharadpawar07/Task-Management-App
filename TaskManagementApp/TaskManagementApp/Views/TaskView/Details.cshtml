@model TaskManagementApp.Models.Task

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
        @* <p class="card-text"><strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p> *@
        <p class="card-text"><strong>Due Date:</strong> @(Model.DueDate?.ToString("yyyy-MM-dd") ?? "N/A")</p>

        <p class="card-text"><strong>Created By:</strong> @Model.CreatedBy</p>

        @if (Model.AssignedUser != null)
        {
                <p class="card-text"><strong>Assigned User:</strong> @Model.AssignedUser.FullName</p>
        }
        else
        {
                <p class="card-text"><strong>Assigned User:</strong> Not Assigned</p>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "TaskView")" class="btn btn-secondary">Back to List</a>
</div>
